                    xmlns:cvt="clr-namespace:GTIFramework.Common.Utils.Converters;assembly=GTIFramework" >

    <cvt:InvertBoolConverter x:Key="invertBoolConverter"/>
    <cvt:BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter"/>

    <!--===================================================================================-->
    <!--Window-->
    <Style TargetType="{x:Type Window}" x:Key="PopupWindow">
        <Setter Property="RenderOptions.BitmapScalingMode" Value="NearestNeighbor"/>
        <Setter Property="RenderOptions.EdgeMode" Value="Unspecified"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="Background" Value="#213753"/>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <SolidColorBrush Color="#FFFFFF" Opacity="0.5"/>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderThickness" Value="5"/>
    </Style>

    <!--MAINWindow-->
    <Style TargetType="{x:Type Window}" x:Key="MAINWindow">
        <Setter Property="RenderOptions.BitmapScalingMode" Value="Unspecified"/>
        <Setter Property="RenderOptions.EdgeMode" Value="Unspecified"/>
    </Style>

    <!--UserControl-->
    <Style TargetType="{x:Type UserControl}" x:Key="UcPopupWindow">
        <Setter Property="RenderOptions.BitmapScalingMode" Value="NearestNeighbor"/>
        <Setter Property="RenderOptions.EdgeMode" Value="Unspecified"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <SolidColorBrush Color="#FFFFFF" Opacity="0.5"/>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderThickness" Value="5"/>
        <Setter Property="Margin" Value="-7,-6,-7,-6"/>
    </Style>

    <!--UserControl Content-->
    <Style TargetType="{x:Type UserControl}" x:Key="UcContent">
        <Setter Property="RenderOptions.BitmapScalingMode" Value="NearestNeighbor"/>
        <Setter Property="RenderOptions.EdgeMode" Value="Unspecified"/>
    </Style>



