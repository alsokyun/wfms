<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    >

    <!--///////////////// Font /////////////////-->
    <FontFamily x:Key="malgun">pack://application;,,,/Resources/Fonts/#맑은 고딕</FontFamily>
    <FontFamily x:Key="malgunsl">pack://application;,,,/Resources/Fonts/#맑은 고딕 Semilight</FontFamily>
    <FontFamily x:Key="malgunbd">pack://application;,,,/Resources/Fonts/#맑은 고딕 Bold</FontFamily>

    <!--보통-->
    <Style TargetType="{x:Type Control}" x:Key="BasefontStyle">
        <Setter Property="FontFamily" Value="{StaticResource malgun}"/>
        <Setter Property="TextOptions.TextRenderingMode" Value="Auto"/>
        <Setter Property="TextOptions.TextFormattingMode" Value="Ideal"/>
    </Style>



    
    
    
    <!--///////////////// Border /////////////////-->
    <!--메뉴 헤더 Border-->
    <Style TargetType="{x:Type Border}" x:Key="MenuHeaderBorder">
        <Setter Property="Background" Value="#32a7a8a3"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="#3213202e"/>
    </Style>

    <!--상세 헤더 Border-->
    <Style TargetType="{x:Type Border}" x:Key="DtlHeaderBorder">
        <Setter Property="Background" Value="#00ff00"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="#3213202e"/>
    </Style>

    
    
    
    


    <!--///////////////// Label /////////////////-->
    <!--그리드 내 Label-->
    <Style TargetType="{x:Type Label}" x:Key="GridLabel" BasedOn="{StaticResource BasefontStyle}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
    </Style>






    <!--///////////////// Button /////////////////-->
    <!--발송 버튼 (이미지)-->
    <Style TargetType="Button" x:Key="SendButton">
        <Setter Property="Width" Value="92"/>
        <Setter Property="Height" Value="34"/>
        <Setter Property="Margin" Value="5,0,0,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid>
                        <Image Source="/Resources/Navy/Image/btn_send.png"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Grid>
                                <Image Source="/Resources/Navy/Image/btn_send_on.png"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
    <!--팝업 닫기 버튼 (이미지)-->
    <Style TargetType="Button" x:Key="PopupCloseButton">
        <Setter Property="Width" Value="72"/>
        <Setter Property="Height" Value="34"/>
        <Setter Property="Margin" Value="5,0,0,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid>
                        <Image Source="/Resources/Navy/Image/btn_popup_close.png"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Grid>
                                <Image Source="/Resources/Navy/Image/btn_popup_close_on.png"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>




    <!--///////////////// TextBlock /////////////////-->
    <!--그리드 내 TextEdit (inner shadow)-->
    <Style TargetType="{x:Type TextBox}" x:Key="GridTextBox">
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="Height" Value="27"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10,0,10,0"/>
        
    </Style>


</ResourceDictionary>