<Popup x:Class="GTI.WFMS.GIS.Module.FTR_POP"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GTI.WFMS.GIS.Module"
             mc:Ignorable="d" 
        
       Width="290" Height="660"
       >


    <Grid x:Name="gridContent">
        <StackPanel Background="White">
            <Grid >
                <Label Background="#144873" Foreground="White" Margin="5" FontWeight="Bold" FontSize="13">시설물정보</Label>
                <Button x:Name="btnClose" Content="닫기" HorizontalAlignment="Right" Margin="7" Click="BtnClose_Click" Style="{DynamicResource TxtButton}">
                </Button>
            </Grid>

            <Grid>
                <ContentControl x:Name="ctl" Height="620"/>
            </Grid>


        </StackPanel>
    </Grid>


</Popup>