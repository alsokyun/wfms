<Window x:Class="GTI.WFMS.Modules.Main.PopWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GTI.WFMS.Modules.Main"
        mc:Ignorable="d"
        Title="PopWin" Height="630" Width="1100"
        WindowStyle="None" AllowsTransparency="True"
        x:Name="popWin"
        
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <!--폼 아웃라인 border-->
        <Border x:Name="bdTitle" Grid.Row="0" Background="{DynamicResource TileCOLOR2Brush}"/>
        <Label Grid.Row="0" Content="화면타이틀" FontSize="16" FontWeight="Bold" Foreground="White" 
               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0 0 0"
               x:Name="lbTitle"
               />
        <Button x:Name="btnXSignClose" Grid.Row="0" Style="{DynamicResource XSignCloseButton}" 
                Margin="0 15 15 0"/>

        <Frame Grid.Row="1" NavigationUIVisibility="Hidden" x:Name="srcFrm"></Frame>
    </Grid>
</Window>
